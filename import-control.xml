<!DOCTYPE import-control PUBLIC
    "-//Puppy Crawl//DTD Import Control 1.1//EN"
    "http://www.puppycrawl.com/dtds/import_control_1_1.dtd">
<import-control pkg="com.google.code.bpmn_simulator">
	<allow pkg="java" />
	<allow pkg="javax" />

	<subpackage name="bpmn">
		<allow pkg="org.w3c.dom" />
		<allow pkg="org.xml.sax" />
		<allow pkg="com.google.code.bpmn_simulator.framework" />
		<allow class="com.google.code.bpmn_simulator.bpmn.Messages"
			exact-match="true" />

		<subpackage name="di">
			<allow pkg="com.google.code.bpmn_simulator.bpmn.model" />
		</subpackage>

		<subpackage name="model">

			<subpackage name="collabboration">
				<allow pkg="com.google.code.bpmn_simulator.bpmn.model.core" />
			</subpackage>

			<subpackage name="core">

				<subpackage name="foundation">
				</subpackage>

				<subpackage name="common">
					<allow pkg="com.google.code.bpmn_simulator.bpmn.model.core.foundation" />
				</subpackage>

				<subpackage name="services">
					<allow pkg="com.google.code.bpmn_simulator.bpmn.model.core.common" />
					<allow pkg="com.google.code.bpmn_simulator.bpmn.model.core.foundation" />
				</subpackage>

				<subpackage name="infrastructure">
				</subpackage>

			</subpackage>

			<subpackage name="process">
				<allow pkg="com.google.code.bpmn_simulator.bpmn.model.core" />
			</subpackage>

		</subpackage>

	</subpackage>

	<subpackage name="framework">

		<subpackage name="element">

			<subpackage name="visual">
				<allow
					pkg="com.google.code.bpmn_simulator.framework.element.visual.geometry" />
				<allow pkg="com.google.code.bpmn_simulator.framework.element.logical" />
			</subpackage>

			<subpackage name="logical">
				<allow pkg="com.google.code.bpmn_simulator.framework.element.visual" />
			</subpackage>

		</subpackage>

		<subpackage name="execution">
			<allow pkg="com.google.code.bpmn_simulator.framework.instance" />
		</subpackage>

		<subpackage name="instance">
			<allow pkg="com.google.code.bpmn_simulator.framework.token" />
		</subpackage>

		<subpackage name="token">
			<allow pkg="com.google.code.bpmn_simulator.framework.instance" />
		</subpackage>

	</subpackage>

	<subpackage name="gui">
		<allow pkg="com.google.code.bpmn_simulator.framework" />
		<allow pkg="com.google.code.bpmn_simulator.bpmn" />
		<allow pkg="com.google.code.bpmn_simulator.gui" />
		<allow class="com.google.code.bpmn_simulator.gui.Messages"
			exact-match="true" />

		<subpackage name="instances">
		</subpackage>

		<subpackage name="log">
		</subpackage>

		<subpackage name="preferences">
			<allow class="com.google.code.bpmn_simulator.gui.AbstractDialog"
				exact-match="true" />
		</subpackage>

	</subpackage>

</import-control>
